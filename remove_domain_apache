amar='\E[0;33m'   # Yellow
bold='\033[37;4;1m' #BOLD
und='\033[37;4m'
rese=$(tput sgr0) # No color.
OK="${verd}[OK]${rese}";                                                                                                                                                                               
ATT="${amar}[!]${rese}";                                                                                                                                                                               
FAIL="${verm}[!]${rese}";

